doctype 
html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  link(rel='stylesheet', href='css/sign.css')
  title Document
body
  .header
    .logo
      img(src='images/ufarm_logo.png', alt='logo', height='85px', width='90px')

  .container
    .main
      form(name='farmerregistrationform'  method='POST' action='/farmerregistration' onsubmit='return access_farmerregistrationform()')
        h1
          | REGISTRATION FORM
        .form-group
          .form-row
            .col-sm-4
              input#name.form-control(type='text', placeholder=' Name', name='name')
            .col-sm-4
              input#username.form-control(type='text', placeholder='Username', name='username')
        
        .form-row
          .col-sm-2
            input#dob.form-control(type='text', placeholder='dateOfBirth', name='dob' onfocus='(this.type="date")')
          .col-sm-3
            input#ward.form-control(type='text', placeholder='wardName', name='ward')
          .col-sm-3
            input#password.form-control(type='password', placeholder='Password', name='password')
            
        
        .form-row
          .col-sm-3
            input#dor.form-control(type='text', placeholder='dateOfRegisttration', name='dor' onfocus='(this.type="date")')
          .col-sm-4
            input#nin.form-control(type='text', placeholder='NIN', name='nin')
          .col-sm-4
            input#role.form-control(type='text', Value='urbanfarmer', name='role', readonly)
        
        .form-row
          .col-sm-4
            input#phoNumber.form-control(type='text', placeholder='Phonenumber', name='phonNum')
      
        
        fieldset.form-group
          .row
            legend.col-form-label.col-sm-2.pt-0 Gender
            .col-sm-10#gender
              .form-check
                input#femaleRadio.form-check-input(type='radio', name='gender', value='female')
                label.form-check-label(for='femaleRadio')
                  | Female
              .form-check
                input#maleRadio.form-check-input(type='radio', name='gender', value='male')
                label.form-check-label(for='maleRadio')
                  | Male

                  
        fieldset.form-group
          .row
            legend.col-form-label.col-sm-2.pt-0 Activities
            .col-sm-10#activities
              .form-check
                input#diary_activities.form-check-input(type='checkbox', name='activities', value='Diary products')
                label.form-check-label(for='activities')
                  | Diary Products
              .form-check
                input#horti_activities.form-check-input(type='checkbox', name='activities', value='Horticulture')
                label.form-check-label(for='activities')
                  | Horticulture products
              .form-check
                input#poultry_activities.form-check-input(type='checkbox', name='activities', value='Poultry')
                label.form-check-label(for='activities')
                  | Poultry

        input#submitDetails(type='submit' value='Submit')
        
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
  script(src='validations/farmerregistrationval.js')
